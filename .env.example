# HistoryMap Environment Variables

# API Settings
API_TITLE=HistoryMap API
API_VERSION=0.1.0
DEBUG=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/historymap.db

# ML Settings
ML_MODEL_NAME=seara/rubert-tiny-sentiment
ML_DEVICE=cpu
ML_BATCH_SIZE=10

# Scraper Settings
SCRAPER_BASE_URL=https://prozhito.org
SCRAPER_TIMEOUT=10
SCRAPER_DELAY=0.5

# Cache TTL (seconds)
CACHE_TTL=86400

# GeoJSON Path
GEOJSON_PATH=./urss.geojson

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:5173","http://localhost:4173","http://localhost:3000"]

# Frontend API URL
VITE_API_URL=http://localhost:8000
